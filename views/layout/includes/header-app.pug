header(class="bg-teal-900 p-4")
    div(class="container mx-auto flex justify-between items-center")
        a(href="/" class="hover:scale-110") 
            h1(class="text-2xl text-white font-bold text-center") Bienes
                span(class="font-normal") Raices
        nav(class="my-5 text-sm md:flex md:items-center md:gap-3 font-bold text-white hidden")
            if _token
                a(href="/mis-propiedades") Mis propiedades
                form(action="/auth/cerrar-sesion" method="POST")
                    input(type="hidden" name="_csrf" value= csrfToken) 
                    input(type="submit" class="bg-teal-800 hover:bg-teal-500 hover:text-teal-900 py-2 px-10 rounded-lg cursor-pointer" value="Cerrar Sesion")           
            else 
                a(href="/auth/registro") Crear Cuenta
                a(href="/auth/login") Iniciar Sesion

div(class="bg-teal-700 py-5 hidden lg:block")
    div(class="container mx-auto flex justify-between")
        nav(class="flex gap-6 items-center")
            a(href="/categorias/1" class="text-sm font-bold uppercase text-white hover:scale-125 hover:text-teal-950") Casas 
            a(href="/categorias/2" class="text-sm font-bold uppercase text-white hover:scale-125 hover:text-teal-950") Departamentos 
            a(href="/categorias/3" class="text-sm font-bold uppercase text-white hover:scale-125 hover:text-teal-950") Bodegas 
            a(href="/categorias/4" class="text-sm font-bold uppercase text-white hover:scale-125 hover:text-teal-950") Terrenos 
            a(href="/categorias/5" class="text-sm font-bold uppercase text-white hover:scale-125 hover:text-teal-950") Caba√±as 

        form(action="/buscador" method="POST" class="flex gap-3 items-center")
            input(type="hidden" name="_csrf" value= csrfToken)
            label(for="termino" class="text-sm uppercase font-bold text-white") Busqueda
            input(type="text" id="termino" name="termino" placeholder="Buscar Propiedades" class="p-2 rounded-lg shadow-xl text-sm")  
            input(type="submit" class="bg-teal-700 hover:bg-teal-500 hover:text-teal-900 rounded-lg text-white uppercase font-bold p-2 cursor-pointer text-sm" value="buscar")