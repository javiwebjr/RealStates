div(class="bg-white shadow-xl rounded-md")
    img(class="object-cover h-72 w-full rounded-t-xl" src=`/uploads/${propiedad.imagen}` alt=`Imagen Casa ${propiedad.titulo}`)
    div(class="p-5 space-y-3")
        h3(class="text-2xl font-bold")= propiedad.titulo
        p(class=" text-gray-600") Habitaciones: 
            span(class="text-gray-800 font-bold")= propiedad.habitaciones
        p(class=" text-gray-600") WC: 
            span(class="text-gray-800 font-bold")= propiedad.wc
        p(class=" text-gray-600") Precio: 
            span(class="text-gray-800 font-bold")= propiedad.precio.nombre
        a(href=`/propiedad/${propiedad.id}` class="bg-indigo-600 w-full text-center block font-bold text-white p-2 uppercase rounded-xl") Ver Propiedad 