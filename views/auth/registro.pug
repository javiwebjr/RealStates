extends ../layout/index

block contenido
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes
            span(class="font-normal") Raices
        h2(class="text-center text-2xl  font-extrabold")= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form(class="space-y-4" method="POST" action="/auth/registro" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="nombre") Nombre
                        input(type="text" id="nombre" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Nombre" name="nombre" value= usuario ? usuario.nombre : '')
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="email") Email
                        input(type="email" id="email" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="example@example.com" name="email" value= usuario ? usuario.email : '')
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="password") Password
                        input(type="password" id="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Escribe tu password" name="password" autoComplete="off")
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="repetir_password") Confirma tu password
                        input(type="password" id="repetir_password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Confirma tu password" name="repetir_password" autoComplete="off")

                    div(class="flex items-center justify-between")
                        a(href="/auth/login" class="text-gray-500 text-xs") Â¿Ya tienes cuenta? Inicia Sesion 
                        a(href="/auth/olvide-password" class="text-gray-500 text-xs") Olvide mi password 
                    input(type="submit" value="Crear Cuenta" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer")