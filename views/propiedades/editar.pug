extends ../layout/admin

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes
            span(class="font-normal") Raices
        h2(class="text-center text-2xl  font-extrabold")= pagina
        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(class="space-y-8" method="POST")
                input(type="hidden" name="_csrf" value=csrfToken)
                div(class="space-y-5")
                    h3(class="text-lg leading-6 font-medium text-gray-900") Informacion General 
                    p(class="text-gray-600") Agrega informacion sobre la propiedad en venta
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="titulo") Titulo del Anuncio
                        input(type="text" id="titulo" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Titulo de la propiedad, Ej: Casa en planes de Renderos" name="titulo" value=datos.titulo ? datos.titulo : '')

                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="descripcion") Descripcion
                        textarea(id="descripcion" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Descripcion de la propiedad" name="descripcion")= datos.descripcion ? datos.descripcion : ''

                    div(class="md:flex gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/2")
                            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="categoria") Categoria
                            select(type="text" id="categoria" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" name="categoria")
                                option(value="") - Seleccione -
                                each categoria in categorias
                                    option(value=categoria.id selected= datos.categoriaId ? datos.categoriaId == categoria.id ? true : false : null)= categoria.nombre

                        div(class="md:w-1/2")
                            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="precio") Precio
                            select(type="text" id="precio" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" name="precio")
                                option(value="") - Seleccione -
                                each precio in precios
                                    option(value=precio.id selected= datos.precioId ? datos.precioId == precio.id ? true : false : null)= precio.nombre

                    div(class="md:flex gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/3")
                            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="habitaciones") Habitaciones
                            select(type="text" id="habitaciones" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" name="habitaciones")
                                option(value="") - Seleccione
                                - var n = 1;
                                    while n < 5
                                        option(value=n selected= datos.habitaciones ? datos.habitaciones == n ? true : false : null) #{n++}

                        div(class="md:w-1/3")
                            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="estacionamiento") Estacionamiento
                            select(type="text" id="estacionamiento" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" name="estacionamiento")
                                option(value="") - Seleccione
                                - var n = 1;
                                    while n < 5
                                        option(value=n selected= datos.estacionamiento ? datos.estacionamiento == n ? true : false : null) #{n++}

                        div(class="md:w-1/3")
                            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="wc") WC
                            select(type="text" id="wc" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" name="wc")
                                option(value="") - Seleccione
                                - var n = 1;
                                    while n < 4
                                        option(value=n selected= datos.wc ? datos.wc == n ? true : false : null) #{n++}

                    div(class="border-gray-200 border-t py-5 space-y-6")
                        h3(class="text-lg leading-6 font-medium text-gray-900") Ubicacion
                        p(class="text-gray-600") Ubica la propiedad en el mapa
                        #mapa.h-96

                        div 
                            p.calle= datos.calle ? datos.calle : ''

                        input(type="hidden" name="calle" id="calle" value= datos.calle ? datos.calle : '')
                        input(type="hidden" name="lat" id="lat" value= datos.lat ? datos.lat : '')
                        input(type="hidden" name="lng" id="lng" value= datos.lng ? datos.lng : '')
                    
                    input(class="w-full py-3 bg-teal-600 hover:bg-teal-700 rounded text-white font-bold uppercase cursor-pointer" type="submit" value="Guardar Cambios")

block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")